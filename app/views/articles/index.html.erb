<div class="container">
  <h1>My articles</h1>
  <br>
  <div class='list'>
    <% @articles.each do |article|%>
      <li> <%= link_to article.title, article_path(article) %> <%= link_to article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class:"text-right" do %>
              <i class="fa-regular fa-trash-can"></i>
            <%end%>
      </li>
    <%end%>
  </div>
  <br>
  <div class='btn'>
    <%= link_to '+ Add a new article', new_article_path, class:'btn-add'%>
  </div>
</div>
